<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>

  <body>
    <%- include('../partials/nav.ejs');%>
    
    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>
      <div class="card">
        <div class="card-header">
          <div><strong>Title:</strong> <%= meeting.title %></div>
          <div><strong>Company:</strong> <%= meeting.company.name %></div>
        </div>
        <div><strong>Type:</strong> <%= meeting.type %></div>
        <div><strong>State:</strong> <span class="state state-<%= meeting.state.toLowerCase() %>"><%= meeting.state %></span></div>
        <% if(meeting.jobApp){ %>
        <div><strong>Job Application:</strong> <a href="/jobApps/<%= meeting.jobApp._id %>"><%= meeting.jobApp.title %></a></div>
        <% } %>
        <div>
          <strong>Start Date:</strong> <%= new Date(meeting.startAt).toLocaleDateString() %>
        </div>
        <% if(meeting.endAt){ %>
        <div>
          <strong>End Date:</strong> <%= new Date(meeting.endAt).toLocaleDateString() %>
        </div>
        <% } %>
        <% if(meeting.description){ %>
        <div>
          <strong>Description:</strong> <%= meeting.description %>
        </div>
        <% } %>
        <% if(meeting.notes){ %>
        <div>
          <strong>Notes:</strong> <%= meeting.notes %>
        </div>
        <% } %>
        <div class="actions">
          <a href="/meetings/<%=meeting._id%>/edit" class="btn btn-primary btn-sm">Edit</a>
          <form action="/meetings/<%=meeting._id%>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
