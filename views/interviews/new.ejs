<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>
  <body>
    <%- include('../partials/nav.ejs'); %>
    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>
      <form class="crud-form" action="/interviews" method="POST">
        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "company",
          fieldLabel: "Company",
          fieldValue: String(locals.interview?.company?._id||""),
          fieldOptions: companies.map(company=>{return {value: String(company._id), label: company.name}})
        })%>
        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "jobApp",
          fieldLabel: "Job Application",
          fieldValue: String(locals.interview?.jobApp?._id||""),
          fieldOptions: jobApps.map(jobApp=>{return {value: String(jobApp._id), label: jobApp.title}})
        })%>
        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "title",
          fieldLabel: "Title",
          fieldValue: locals.interview?.title || ""
        }) %>

        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "state",
          fieldLabel: "State",
          fieldValue: locals.interview?.state || "",
          fieldOptions: [
            {
              value: "Planned",
              label: "Planned"
            },
            {
              value: "Done",
              label: "Done"
            },
            {
              value: "Canceled",
              label: "Canceled"
            }
          ]
        })%>

        <%- include('../partials/forms/dateInput.ejs', {
          fieldName: "startAt",
          fieldLabel: "Start Date",
          fieldValue: locals.interview?.startAt ? locals.interview?.startAt.toISOString().slice(0,10) : new Date().toISOString().slice(0,10)
        }) %>

        <%- include('../partials/forms/dateInput.ejs', {
          fieldName: "endAt",
          fieldLabel: "End Date",
          fieldValue: locals.interview?.endAt ? locals.interview.endAt.toISOString().slice(0,10) : ""
        }) %>

        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "description",
          fieldLabel: "Description",
          fieldValue: locals.interview?.description || ""
        }) %>

        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "notes",
          fieldLabel: "Notes",
          fieldValue: locals.interview?.notes || ""
        }) %>

        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "interviewers",
          fieldLabel: "Interviewers (comma separated)",
          fieldValue: locals.interview?.interviewers?.join(", ") || ""
        }) %>

        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "interviewType",
          fieldLabel: "Interview Type",
          fieldValue: locals.interview?.interviewType || "",
          fieldOptions: [
            { value: "Phone", label: "Phone" },
            { value: "Video", label: "Video" },
            { value: "Onsite", label: "Onsite" }
          ]
        })%>

        <div class="actions">
          <button type="submit">Save Interview</button>
        </div>
      </form>
    </main>
  </body>
</html>
