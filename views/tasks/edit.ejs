<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>
  <body>
    <%- include('../partials/nav.ejs'); %>
    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>
      <form class="crud-form" action="/tasks/<%=task._id%>?_method=PUT" method="POST">
        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "company",
          fieldLabel: "Company",
          fieldValue: String(task.company?._id),
          fieldOptions: companies.map(company=>{return {value: String(company._id), label: company.name}})
        })%>
        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "jobApp",
          fieldLabel: "Job Application",
          fieldValue: String(task.jobApp?._id),
          fieldOptions: jobApps.map(jobApp=>{return {value: String(jobApp._id), label: jobApp.title}})
        })%>
        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "title",
          fieldLabel: "Title",
          fieldValue: task.title
        }) %>

        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "state",
          fieldLabel: "State",
          fieldValue: task.state,
          fieldOptions: [
            {
              value: "Planned",
              label: "Planned"
            },
            {
              value: "Done",
              label: "Done"
            },
            {
              value: "Canceled",
              label: "Canceled"
            }
          ]
        })%>

        <%- include('../partials/forms/dateInput.ejs', {
          fieldName: "startAt",
          fieldLabel: "Start Date",
          fieldValue: task.startAt ? task.startAt.toISOString().slice(0,10) : new Date().toISOString().slice(0,10)
        }) %>

        <%- include('../partials/forms/dateInput.ejs', {
          fieldName: "endAt",
          fieldLabel: "End Date",
          fieldValue: task.endAt ? task.endAt.toISOString().slice(0,10) : ""
        }) %>

        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "description",
          fieldLabel: "Description",
          fieldValue: task.description || ""
        }) %>

        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "notes",
          fieldLabel: "Notes",
          fieldValue: task.notes || ""
        }) %>

        <%- include('../partials/forms/selectInput.ejs', {
          fieldName: "priority",
          fieldLabel: "Priority",
          fieldValue: locals.task?.priority || "Medium",
          fieldOptions: [
            { value: "Low", label: "Low" },
            { value: "Medium", label: "Medium" },
            { value: "High", label: "High" }
          ]
        })%>

        <%- include('../partials/forms/dateInput.ejs', {
          fieldName: "dueDate",
          fieldLabel: "Due Date",
          fieldValue: locals.task?.dueDate ? locals.task?.dueDate.toISOString().slice(0,10) : ""
        }) %>

        <div class="actions">
          <button type="submit">Save Task</button>
        </div>
      </form>
    </main>
  </body>
</html>
